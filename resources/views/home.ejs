<section class="hero py-16">
    <div class="mx-auto container flex justify-between items-center">
        <div class="w-1/2">
            <!-- first small h6 heading -->
            <h6 class="text-lg"><em>Are you hungry?</em></h6>
            <h1 class="text-6xl font-bold mb-4">Don't Wait !</h1>
            <button class="add-to-cart py-1 px-6 rounded-full">Order Now</button>
        </div>
        <div class="w-1/2">
            <img src="/img/hero-pizza.png" alt="pizza image">
        </div>
    </div>
</section>
<section class="menu container mx-auto py-8">
    <h1 class="font-bold text-xl mb-8"> All Pizzas</h1>
     <div class="grid grid-cols-4 " id ="grid-container">
         
        <% pizzas.forEach(function(pizza){ %>
            <div class="w-64">
                <img src="/img/<%=pizza.image %>" class="h-40 mb-4 mx-auto" alt="">
                <div class="text-center">
                    <h2 class="mb-4 text-lg"><%=pizza.name%></h2>
                    <span class="size py-1 px-4 rounded-full text-xs uppercase"><%=pizza.size%></span>
                    <div class="flex justify-around items-center mt-4">
                        <span class="font-bold text-lg">â‚¹<%=pizza.price%></span>
                        <button class="add-to-cart py-1 px-6 rounded-full flex items-center">
                            <span>+</span>
                            <span class="ml-4">Add</span>
                        </button>
                    </div>
                </div>
            </div>
        <%  })%>
     </div>
</section>
