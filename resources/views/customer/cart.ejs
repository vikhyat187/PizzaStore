<section class="cart py-16 px-4 ">
    <% if (!session.cart){%>
    <div class="empty-cart py-16" >
        <div class="container mx-auto text-center">
         <h1 class="text-3xl font-bold mb-2">Cart Empty ðŸ˜®</h1>
         <p class="text-gray-500 text-lg">You propably haven't ordered a pizza yet. <br>
             To order something go to main page.
         </p>
         <img src="/img/empty-cart.png" alt="empty-cart" class="w-2/5 mx-auto my-10">
         <a href="/" class="px-6 py-2 rounded-full btn-primary text-white font-bold mt-12 inline-block">Go back</a>
        </div>
    </div>
    <% } else{%>
       <div class="order container mx-auto w-full xl:w-1/2">
        <div class="flex items-center pb-4 border-b border-gray-300">
            <img src="../img/cart-black.png" alt="cart logo">
            <h1 class="font-bold ml-4 text-2xl">Order summary</h1>
        </div>
        <div class="pizza-list ">
            <% for(let pizza of Object.values(session.cart.items)){%>
            <div class="flex items-center my-8">
            <img src="../img/<%=pizza.item.image%>" class="w-24 " alt="pizza image">
            <div class="ml-4 flex-1">
                <h1><%=pizza.item.name%></h1>
                <span class="uppercase text-gray-500"><%=pizza.item.size%></span>
            </div>
            <span class="flex-1"><%=pizza.qty%> Pcs</span>
            <span class="font-bold text-lg">â‚¹<%=pizza.item.price * pizza.qty%></span>
        </div>
        <% } %>
    </div>

        <hr class="mt-5">
    </div>
    <div class="text-right py-4">
        <div class="">
            <span class="text-lg font-bold">Total Amount:</span>
            <span class="amount text-2xl font-bold ml-2">â‚¹<%= session.cart.totalPrice%></span>
        </div>
        <%if (user){%>
        <div class="py-4">
            <form action="/orders" method="POST" class="mt-12">
                <input type="tel" name="phone"  id="pno" class="border border-gray-400 p-2 w-1/2 mb-4" placeholder="Phone number">
                <input type="text"  name="address" id="address" class="border border-gray-400 p-2 w-1/2" placeholder="Address">
                <div>
                    <button class="btn-primary px-6 py-2 mt-6 rounded-full" type="submit">Order Now</button>
                </div>
            </form>
            
        </div>
        <%} else {%>
            <a href="/login" class="inline-block cursor-pointer btn-primary px-6 py-2 mt-6 rounded-full">Login to Continue</a>
        <% }%>
    </div>
    <%}%>
</section>